<div class="row">
    <h3>Create an Account</h3>
    <form class="col s6" action="/api/users/signup" method="POST">
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="text" id="signup-name">
                <label for="signup-name">Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="email" id="signup-email">
                <label for="signup-email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="text" id="signup-username">
                <label for="signup-username">Username</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="password" id="signup-password">
                <label for="signup-password">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-signup">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
    <h3>Sign in to Your Account</h3>
    <form class="col s6" action="/api/users/login" method="POST">
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="text" id="login-email">
                <label for="login-email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input class="validate" type="password" id="login-password">
                <label for="login-password">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-login">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
<script src="./assets/js/login.js"></script>
<script src="./assets/js/signup.js"></script>
